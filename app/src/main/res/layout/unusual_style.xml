<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dip">

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/unusual_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/user_name"
        android:layout_marginLeft="5dip"
        android:layout_toRightOf="@id/user_name"
        android:textColor="#808080"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_name"
        android:layout_marginLeft="40dip"
        android:layout_marginTop="5dip"
        android:textColor="#808080"
        android:textSize="16sp"
        android:visibility="gone" />

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/temp_pic1"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:layout_below="@id/content"
        android:layout_marginLeft="40dip"
        android:layout_marginTop="5dip"
        android:visibility="gone" />

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/temp_pic2"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:layout_alignTop="@id/temp_pic1"
        android:layout_marginLeft="10dip"
        android:layout_toRightOf="@id/temp_pic1"
        android:visibility="gone" />

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/temp_pic3"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:layout_alignTop="@id/temp_pic1"
        android:layout_marginLeft="10dip"
        android:layout_toRightOf="@id/temp_pic2"
        android:visibility="gone" />

</RelativeLayout>