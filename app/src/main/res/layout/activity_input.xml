<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.liutianjiao.smartvideosurveillance.InputActivity">

    <RelativeLayout
        android:id="@+id/input_title"
        android:layout_width="fill_parent"
        android:layout_height="55dip"
        android:background="#6699ff">

        <Button
            android:id="@+id/back"
            android:layout_width="35dip"
            android:layout_height="35dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:background="@drawable/back_selector" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="输入信息"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <Button
            android:id="@+id/complete"
            android:layout_width="70dip"
            android:layout_height="40dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:background="@drawable/spinner_selector"
            android:text="完成"
            android:textColor="@drawable/button_selector"
            android:textSize="16sp" />

        <ProgressBar
            android:id="@+id/upload_progress"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:layout_toLeftOf="@+id/complete"
            android:visibility="gone" />

    </RelativeLayout>

    <EditText
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/input_title"
        android:background="@null"
        android:hint="请输入异常事件内容，少于150字"
        android:maxLength="150"
        android:maxLines="10"
        android:padding="5dip" />

    <ImageView
        android:id="@+id/temp_pic2"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dip"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/temp_pic1"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="150dip"
        android:layout_toLeftOf="@id/temp_pic2"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/temp_pic3"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="150dip"
        android:layout_toRightOf="@id/temp_pic2"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_alignParentBottom="true"
        android:background="@drawable/function_bar">

        <Button
            android:id="@+id/picture"
            android:layout_width="45dip"
            android:layout_height="45dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dip"
            android:background="@drawable/picture_selector" />

        <Button
            android:id="@+id/camera"
            android:layout_width="45dip"
            android:layout_height="45dip"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/camera_selector" />
    </RelativeLayout>

</RelativeLayout>
