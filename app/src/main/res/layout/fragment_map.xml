<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.liutianjiao.smartvideosurveillance.MapFragment">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:background="#6699ff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:text="设备分布"
                android:textColor="#c8cacf"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/spinner_selector" />
        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="90dip"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_marginBottom="55dip"
            android:background="#f3f3f3">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:id="@+id/device_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="5dip"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/process"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/device_name"
                    android:layout_marginLeft="10dip"
                    android:layout_toRightOf="@id/device_name"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/device_name"
                    android:layout_marginLeft="10dip"
                    android:textColor="#c8cacf"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/place"
                    android:layout_marginLeft="10dip"
                    android:layout_toRightOf="@id/place"
                    android:textColor="#c8cacf"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/node_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/place"
                    android:layout_marginLeft="10dip"
                    android:textColor="#c8cacf"
                    android:textSize="16sp" />


                <Button
                    android:id="@+id/log"
                    android:layout_width="80dip"
                    android:layout_height="35dip"
                    android:layout_alignBottom="@id/node_name"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dip"
                    android:background="@drawable/spinner_selector"
                    android:text="@string/log"
                    android:textColor="@drawable/button_selector2"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/video"
                    android:layout_width="80dip"
                    android:layout_height="35dip"
                    android:layout_alignBottom="@id/node_name"
                    android:layout_marginRight="5dip"
                    android:layout_toLeftOf="@id/log"
                    android:background="@drawable/spinner_selector"
                    android:text="@string/video"
                    android:textColor="@drawable/button_selector2"
                    android:textSize="20sp" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>

</FrameLayout>
